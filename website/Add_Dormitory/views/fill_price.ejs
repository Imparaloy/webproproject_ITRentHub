<%- include("head.ejs") %>

<body>
    <div class="container">
        <%- include("sidebar.ejs") %>
        <!-- Main Content -->
        <main class="content">
            <!-- Card Section -->
            <section class="card">
                <h2>การเพิ่มหอพัก</h2>
                <p>กรอกข้อมูลราคาสิ่งต่าง ๆ</p>
                <form action="/insert_DormPrice" method="GET">
                    <label>1. ค่ามัดจำ :</label>
                    <input type="text" name="Advance_payment" autocomplete="off" required placeholder="กรุณากรอกตัวเลข">
                    <label>2. ค่าไฟ :</label>
                    <input type="text" name="Electric_price" autocomplete="off" required placeholder="กรุณากรอกตัวเลข">
                    <label>3. ค่าน้ำ :</label>
                    <input type="text" name="Water_price" autocomplete="off" required placeholder="กรุณากรอกตัวเลข">
                    <label>4. ค่าบริการ :</label>
                    <input type="text" name="Service_price" autocomplete="off" required placeholder="กรุณากรอกตัวเลข">
                    <label>5. ค่าโทรศัพท์ :</label>
                    <input type="text" name="Phone_price" autocomplete="off" required placeholder="กรุณากรอกตัวเลข">
                    <label>6. ค่าอินเทอร์เน็ต :</label>
                    <input type="text" name="Internet_price" autocomplete="off" required placeholder="กรุณากรอกตัวเลข">
                    <button type="submit" value="Submit" id="submit">ยืนยัน</button>
                </form>    
        </main>
    </div>

    <style> 
        form {
            display: flex;
            flex-direction: column;
            margin-top: 20px;
            margin-left: 15%;
            text-align: left;
        }

        input {
            margin-top: 10px;
            margin-bottom: 10px;
            width: 80%;
            font-size: 16px;
        }

        button {
            margin-top: 10px;
            padding: 5px 5px;
            font-size: 16px;
            width: 20%;
            max-width: 20%;
        }
    </style>
</body>
</html>