<%- include("head.ejs") %>

<body>
    <div class="container">
        <%- include("sidebar.ejs") %>
        <!-- Main Content -->
        <main class="content">
            <!-- Card Section -->
            <section class="card">
                <h2>การเพิ่มหอพัก</h2>
                <p>กรอกข้อมูลของห้องพัก</p>
                <form action="/insert_RoomData" method="GET">
                    <label>1. ชื่อห้องพักที่ให้เช่า :</label>
                    <input type="text" name="Room_Name" autocomplete="off" required placeholder="กรุณากรอกข้อความ">
                    <label>2. ประเภทของห้องเช่า :</label>
                    <input type="text" name="Room_Type" autocomplete="off" required placeholder="กรุณากรอกข้อความ">
                    <label>3. ขนาดของห้องเช่า :</label>
                    <input type="text" name="Size" autocomplete="off" required placeholder="กรุณากรอกตัวเลข">
                    <label>4. ค่าเช่าห้องพักแบบรายเดือน:</label>
                    <input type="text" name="Monthly_Rental" autocomplete="off" required placeholder="กรุณากรอกตัวเลข">
                    <label>5. สถานะของห้องพัก :</label>
                    <input type="text" name="Room_Status" autocomplete="off" required placeholder="true or false only">
                    <label>6. จำนวนห้องที่ว่างให้เช่า :</label>
                    <input type="text" name="Number_Available_Room" autocomplete="off" required placeholder="กรุณากรอกตัวเลข">
                    <button type="submit" value="Submit" id="submit">ยืนยัน</button>
                </form>    
        </main>
    </div>

    <style>
        form {
            display: flex;
            flex-direction: column;
            margin-top: 20px;
            margin-left: 15%;
            text-align: left;
        }

        input {
            margin-top: 10px;
            margin-bottom: 10px;
            width: 80%;
            font-size: 16px;
        }

        button {
            margin-top: 10px;
            padding: 5px 5px;
            font-size: 16px;
            width: 20%;
            max-width: 20%;
        }
    </style>
</body>
</html>