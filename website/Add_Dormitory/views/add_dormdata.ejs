<%- include("head.ejs") %>

<body>
    <div class="container">
        <%- include("sidebar.ejs") %>
        <!-- Main Content -->
        <main class="content">
            <!-- Card Section -->
            <section class="card">
                <h2>Add Dormitory</h2>
                <p>Please complete dormitory</p>
                <a href="/fill_dormdata">
                    <button class="property-btn">
                        <h3>Dormitory Data</h3>
                        <p>Please fill in the dormitory data First.</p>
                    </button>
                </a>
                <a href="/fill_price">
                    <button class="property-btn">
                        <h3>Price</h3>
                        <p>Please fill in the price.</p>
                    </button>
                </a>
                <a href="/fill_dormfac">
                    <button class="property-btn">
                        <h3>Dormitory Facility</h3>
                        <p>Please fill in the dormitory facility.</p>
                    </button>
                </a>
