<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dormitory Management</title>
    <link rel="stylesheet" href="view_dormitory.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
</head>
<body>
    <div class="container">
        <!-- Left Sidebar -->
        <aside class="sidebar">
            <nav>
                <ul>
                    <li><a href="#">Select dormitory</a></li>
                    <li><a href="#">Add dormitory</a></li>
                    <li><a href="#" class="active">View dormitory</a></li>
                    <li><a href="#">Chat dormitory</a></li>
                    <li><a href="#">reserve date</a></li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Header -->
            <header>
                <h1>Welcome, <%= owner.User_Name %></h1>
                <div class="header-right">
                    <button class="notification-btn" aria-label="Notifications">
                        <i class="fas fa-bell"></i>
                    </button>
                    <form action="/logout" method="post">
                        <button type="submit" class="logout-btn">Logout</button>
                    </form>
                </div>
            </header>

            <!-- Main Section -->
            <!-- Main Section -->
            <main>
                <section class="content-box">
                    <h2>View dormitory</h2>
                    
                    <div class="rating-section">
                        <div class="guest-reviews">
                            <h3>Guest Reviews :</h3>
                            <div class="stars">
                                <i class="fas fa-star" style="color: #FE7A36;"></i>
                                <i class="fas fa-star" style="color: #FE7A36;"></i>
                                <i class="fas fa-star-half-stroke" style="color: #FE7A36;"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                        </div>
                        <div class="point-rating">
                            <h3>point :</h3>
                            <% if (avg_rate && avg_rate.length > 0 && avg_rate[0].Rating !== null) { %>
                                <div class="rating-value"> <%= avg_rate[0].Rating.toFixed(1) %></div>
                            <% } else { %>
                                <div class="rating-value"> No ratings.</div>
                            <% } %>
                        </div>
                    </div>

                    <div class="reviews-section">
                        <h3>Reviews :</h3>
                        <div class="review-list">
                            <% reviews.forEach((review)=>{ %>
                                <div class="review-box">
                                    <div class="review-user">
                                        <%= review.User_Name %>:
                                    </div>
                                    <div class="review-content">
                                        "<%= review.Comment %>"
                                    </div>
                                    <div class="review-score">
                                        score: <%= review.Rating %>.0
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>

                </section>
            </main>
        </div>
    </div>
</body>
</html>