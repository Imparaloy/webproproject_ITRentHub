<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ITRentHub - Apartment</title>
    <link rel="stylesheet" href="home_styles.css">
    <style>
        * {
            font-family: 'Poppins', sans-serif;
        }
        
        /* --------- Navbar --------- */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #d1d5db;
            padding: 1rem;
            border-radius: 50px;
            margin: 1rem;
        }
        
        .logo {
            font-weight: bold;
            font-size: 1.25rem;
            margin-left: 1rem;
        }
        
        .nav-links a {
            color: black;
            text-decoration: none;
            margin: 0 1rem;
            font-weight: 500;
        }
        
        .nav-links a:hover {
            color: #374151;
        }
        
        .username {
            font-weight: bold;
            margin-right: 1rem;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <span class="logo">ITRentHub</span>
        <div class="nav-links">
            <a href="/home_Admin">หน้าแรก</a>
            <a href="/Apartment_Admin">อพาร์ทเม้นท์</a>
            <a href="/about">เกี่ยวกับเรา</a>
            <a href="/admin">แผงควบคุมผู้ดูแลระบบ</a>
        </div>
        <span class="username">Login</span>
    </nav>
    <section class="headerr">
        <h1>Apartment</h1>
    </section>
    <div class="search-container">
        <div class="search-bar">
            <input type="text" id="searchInput" placeholder="Search...">
            <button class="sort-icon" id="sortIcon"><img src="/home_img/sort.png" alt="sort" class="icon"></button>
            <div class="facility-popup" id="facilityPopup" style="display: none;">
                <h2>Sort</h2>
                <div class="facility-list">
                    <% facilities.forEach(f => { %>
                        <div class="facility-item" data-facility="<%= f.name %>"> <%= f.display_name %></div>
                    <% }); %>
                </div>
                <div class="popup-buttons">
                    <button id="resetFilter">Reset Filter</button>
                    <button id="closePopup">Close</button>
                </div>
            </div>
            <button class="search-button" id="searchButton">Search</button>
        </div>
        <section class="apartments" id="searchResults" style="display: none;">
            <h2>Search Results</h2>
            <div class="apartment-list" id="searchResultsList">
            </div>
        </section>
    </div>

    <section class="apartments">
        <h2>Apartment List</h2>
        <div class="apartment-list">
            <% data.forEach(r => { %>
                <a href="/Show_data_Admin?Rental_ID=<%=r.Rental_ID%>" class="clickable-div">
                    <div class="apartment">
                        <div class="image-placeholder"><img src="/home_img/<%= r.Photo %>"></div>
                        <div class="info">
                            <p class="name"><%= r.Rental_Name %></p>
                            <p class="price"><%= r.Rental_price %> THB/month</p>
                        </div>
                    </div>
                </a>
            <% }); %>
        </div>
    </section>

    <footer>
        &copy; ITRentHub 2025
    </footer>

    <script>
        const searchInput = document.getElementById('searchInput');
        const searchButton = document.getElementById('searchButton');
        const searchResults = document.getElementById('searchResults');
        const searchResultsList = document.getElementById('searchResultsList');
        const sortIcon = document.getElementById('sortIcon');
        const facilityPopup = document.getElementById('facilityPopup');
        const facilityItems = document.querySelectorAll('.facility-item');
        const closePopup = document.getElementById('closePopup');
        const resetFilter = document.getElementById('resetFilter');

        let selectedFacilities = [];

        sortIcon.addEventListener('click', () => {
            facilityPopup.style.display = facilityPopup.style.display === 'block' ? 'none' : 'block';
        });

        closePopup.addEventListener('click', () => {
            facilityPopup.style.display = 'none';
        });

        resetFilter.addEventListener('click', () => {
            selectedFacilities = [];
            facilityItems.forEach(item => {
                item.classList.remove('selected');
            });
        });

        facilityItems.forEach(item => {
            item.addEventListener('click', () => {
                const facility = item.dataset.facility;
                const index = selectedFacilities.indexOf(facility);
                if (index === -1) {
                    selectedFacilities.push(facility);
                    item.classList.add('selected');
                } else {
                    selectedFacilities.splice(index, 1);
                    item.classList.remove('selected');
                }
            });
        });

        searchButton.addEventListener('click', () => {
            const searchTerm = searchInput.value;
            const facilities = selectedFacilities.join(',');
            fetch(`/search?q=${searchTerm}&facilities=${facilities}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    searchResultsList.innerHTML = '';
                    if (data && data.length > 0) {
                        data.forEach(r => {
                            const apartmentDiv = document.createElement('div');
                            apartmentDiv.innerHTML = `
                                <a href="/Show_data_Admin?Rental_ID=${r.Rental_ID}" class="clickable-div">
                                    <div class="apartment">
                                        <div class="image-placeholder"><img src="/home_img/${r.Photo}"></div>
                                        <div class="info">
                                            <p class="name">${r.Rental_Name}</p>
                                            <p class="price">${r.Rental_price} THB/month</p>
                                        </div>
                                    </div>
                                </a>
                            `;
                            searchResultsList.appendChild(apartmentDiv);
                        });
                        searchResults.style.display = 'block';
                    } else {
                        searchResultsList.innerHTML = '<p>No results found.</p>';
                        searchResults.style.display = 'block';
                    }
                })
                .catch(error => {
                    console.error('Fetch error:', error);
                    searchResultsList.innerHTML = '<p>An error occurred.</p>';
                    searchResults.style.display = 'block';
                });
        });
    </script>
</body>
</html>