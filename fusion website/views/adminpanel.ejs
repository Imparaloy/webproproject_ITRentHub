<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ITRentHub - Admin Panel</title>
    <link rel="stylesheet" href="/adminpanel.css">
</head>
<body>
    <nav class="navbar">
        <span class="logo">ITRentHub</span>
        <div class="nav-links">
            <a href="/">Home</a>
            <a href="/apartment">Apartment</a>
            <a href="/about">About Us</a>
            <a href="/admin">Admin Panel</a>
        </div>
        <span class="username"><%= username %></span>
    </nav>

    <h1 class="admin-title">Admin Panel</h1>

    <div class="admin-panel">
        <h2 class="section-title">Approve Rental</h2>
        <table class="rental-table">
            <thead>
                <tr>
                    <th>Rental ID</th>
                    <th>Rental Name</th>
                    <th>Type</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% rentals.forEach(rental => { %>
                    <tr>
                        <td><%= rental.id %></td>
                        <td><%= rental.name %></td>
                        <td><%= rental.type %></td>
                        <td><%= rental.status %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <footer>
        &copy; ITRentHub 2025
    </footer>
</body>
