<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ITRentHub - Home</title>
    <link rel="stylesheet" href="home_styles.css">
</head>
<body>
    <nav class="navbar">
        <span class="logo">ITRentHub</span>
        <div class="nav-links">
            <a href="#">Home</a>
            <a href="#">Apartment</a>
            <a href="#">About Us</a>
        </div>
        <a href="#" class="login">Log in</a>
    </nav>

    <section class="hero">
        <h1>ITRentHub</h1>
        <p>Lorem ipsum dolor sit amet consectetur.<br>Tellus ultricies ut et phasellus a purus.<br>Neque ac nisi sit velit et morbi ipsum</p>
        <button class="learn-more">learn more</button>
    </section>

    <div class="search-container">
        <div class="search-bar">
            <input type="text" id="searchInput" placeholder="Search...">
            <button class="sort-icon"><img src="/home_img/sort.png" alt="sort" class="icon"></button>
            <button class="search-button" id="searchButton">Search</button>
        </div>
        <section class="apartments" id="searchResults" style="display: none;">
            <h2>Search Results</h2>
            <div class="apartment-list" id="searchResultsList">
            </div>
        </section>
    </div>

    <section class="apartments">
        <h2>Recommend apartment</h2>
        <div class="apartment-list">
            <% topRatedRentals.forEach(r => { %>
                <a href="home/Show_data?Rental_ID=<%=r.Rental_ID%>" class="clickable-div">
                    <div class="apartment">
                        <div class="image-placeholder"><img src="/home_img/<%= r.Photo %>"></div>
                        <div class="info">
                            <p class="name"><%= r.Rental_Name %></p>
                            <p class="price"><%= r.Rental_price %> THB/month</p>
                        </div>
                    </div>
                </a>
            <% }); %>
        </div>
    </section>

    <section class="apartments">
        <h2>Pet friendly apartment</h2>
        <div class="apartment-list">
            <% topRatedPetrentals.forEach(r => { %>
            <a href="home/Show_data?Rental_ID=<%=r.Rental_ID%>" class="clickable-div">
                <div class="apartment">
                    <div class="image-placeholder"><img src="/home_img/<%= r.Photo %>"></div>
                    <div class="info">
                        <p class="name"><%= r.Rental_Name %></p>
                        <p class="price"><%= r.Rental_price %> THB/month</p>
                    </div>
                </div>
            </a>
            <% }); %>
        </div>
    </section>

    <section class="why-us">
        <h2>Why Us.</h2>
        <div class="reasons">
            <div class="reason"></div>
            <div class="reason"></div>
            <div class="reason"></div>
        </div>
    </section>

    <footer>
        &copy; ITRentHub 2025
    </footer>

    <script>
        const searchInput = document.getElementById('searchInput');
        const searchButton = document.getElementById('searchButton');
        const searchResults = document.getElementById('searchResults');
        const searchResultsList = document.getElementById('searchResultsList');

        searchButton.addEventListener('click', () => {
            const searchTerm = searchInput.value;
            fetch(`/search?q=${searchTerm}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    searchResultsList.innerHTML = '';
                    if (data && data.length > 0) {
                        data.forEach(r => {
                            const apartmentDiv = document.createElement('div');
                            apartmentDiv.innerHTML = `
                                <a href="home/Show_data?Rental_ID=${r.Rental_ID}" class="clickable-div">
                                    <div class="apartment">
                                        <div class="image-placeholder"><img src="/home_img/${r.Photo}"></div>
                                        <div class="info">
                                            <p class="name">${r.Rental_Name}</p>
                                            <p class="price">${r.Rental_price} THB/month</p>
                                        </div>
                                    </div>
                                </a>
                            `;
                            searchResultsList.appendChild(apartmentDiv);
                        });
                        searchResults.style.display = 'block';
                    } else {
                        searchResultsList.innerHTML = '<p>No results found.</p>';
                        searchResults.style.display = 'block';
                    }
                })
                .catch(error => {
                    console.error('Fetch error:', error);
                    searchResultsList.innerHTML = '<p>An error occurred.</p>';
                    searchResults.style.display = 'block';
                });
        });
    </script>
</body>
</html>