<link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@400;500;600&display=swap" rel="stylesheet">
<style>
    body {
        font-family: 'Sarabun', sans-serif;
        background-color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100vw;
        min-height: 100vh;
        margin: 0;
    }

    .container {
        background-color: #F9B314;
        padding: 30px;
        border-radius: 20px;
        text-align: center;
        width: 350px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-weight: 600;
        margin: 0px;
        color: #1211CA;
    }

    p {
        margin-top: 0px;
        margin-bottom: 20px;
        color: #333;
    }

    a {
        text-decoration: none;
        color: #1211CA;
    }

    label {
        display: block;
        text-align: left;
        margin: 10px 0 5px;
        font-size: 14px;
        color: #333;
    }

    input {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 20px;
        outline: none;
        background-color: white;
        box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.1);
        box-sizing: border-box;
    }

    button {
        font-family: 'Sarabun', sans-serif;
    }

    .btn {
        background-color: #1211CA;
        color: white;
        border: none;
        padding: 10px;
        border-radius: 30px;
        width: 40%;
        margin-top: 20px;
        cursor: pointer;
        font-size: 16px;
    }

    .btn:hover {
        background-color: #0f0ea0;
    }

    .bottom-text {
        margin-top: 10px;
        margin-bottom: 0px;
        font-size: 12px;
    }

    .bottom-text a {
        color: #1211CA;
        font-weight: bold;
    }

    .bottom-text a:hover {
        text-decoration: underline;
    }

     /* STYLE FOR LOGIN */
     .remember-me-container {
        display: flex;
        align-items: center;
        margin-top: 10px;
    }

    .remember-me-container input[type="checkbox"] {
        width: auto;
        margin-right: 5px;
        box-shadow: none;
    }

    .remember-me-container label {
        margin: 0;
        font-size: 14px;
    }

    .dormitory-owner-btn {
        background-color: #1211CA;
        color: white;
        padding: 10px 20px;
        border-radius: 30px;
        border: none;
        margin-top: 20px;
        cursor: pointer;
        font-size: 16px;
    }

    .dormitory-owner-btn:hover {
        background-color: #0f0ea0;
    }

    .wrapper {
        display: flex;
        flex-direction: column; /* Stack items vertically by default */
        align-items: center; /* Center items horizontally */
        width: 100%;
    }

    @media (max-width: 400px) {
        .container {
            width: 90%; /* Adjust container width on smaller screens */
        }
    }
</style>