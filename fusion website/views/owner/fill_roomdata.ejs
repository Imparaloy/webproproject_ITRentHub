<%- include("headernav.ejs") %>
    <div class="main-content">
        <!-- Header -->
        <%- include("headtoppart.ejs") %>
        <!-- Main Content -->
        <main>
            <!-- Card Section -->
            <section class="content-box">
                <h2 class="add-dorm">การเพิ่มหอพัก</h2>
                <h2 class="title">ข้อมูลห้องเช่า</h2>
                <div class="roomdata">
                    <h2 class="roomdata">รายชื่อห้องเช่า</h2>
                    <% data.forEach((item)=>{ %>
                        <div class="room">
                            <div class="row">
                                <span class="label">ชื่อห้องพักที่ให้เช่า : <%=item.Room_Name %></span>
                                <span class="label">ประเภทของห้องเช่า : <%=item.Room_Type %></span>
                            </div>
                            <div class="row">
                                <span class="label">ขนาดของห้องเช่า : <%=item.Size %></span>
                                <span class="label">ค่าเช่าห้องพักต่อเดือน : <%=item.Monthly_Rental %></span>
                            </div>
                            <div class="row">
                                <span class="label">สถานะของห้องพัก : <%=item.Room_Status  ? "ว่าง" : "ไม่ว่าง"%></span>
                                <span class="label">จำนวนห้องที่ว่างให้เช่า : <%=item.Number_Available_Room %></span>
                            </div>
                        </div>
                    <% }); %>      
                    <a href="/add_roomdata"><button class="addroom">เพิ่มห้องเช่า</button></a>
                </div>
                <a href="/insert_RentalPrice"><button class="submit" type="submit" value="Submit" id="submit">ยืนยัน</button></a>
            </section>
        </main>
    </div>
</div>
    <style>


        .addroom {
            margin-top: 10px;
            padding: 10px;
            font-size: 16px;
            background-color: #333;
            color: white;
            border: none;
            border-radius: 30px;
            width: 20%;
            cursor: pointer;
        }

        a {
            text-decoration: none;
        }

        .room {
            width: 80%;
            border: 2px solid black;
            padding: 20px;
            border-radius: 8px;
            margin: 20px;
            background-color: #e9e9ed;
        }

        .row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }

        .label {
            font-weight: bold;
            color: #333;
        }
    </style>
</body>
</html>
