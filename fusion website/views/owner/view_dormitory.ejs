<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ระบบจัดการหอพัก</title>
    <link rel="stylesheet" href="view_dormitory.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
</head>
<body>
    <div class="container">
        <!-- Left Sidebar -->
        <aside class="sidebar">
            <nav>
                <ul>
                    <li><a href="#">Select dormitory</a></li>
                    <li><a href="#">Add dormitory</a></li>
                    <li><a href="#" class="active">View dormitory</a></li>
                    <li><a href="#">Chat dormitory</a></li>
                    <li><a href="#">reserve date</a></li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Header -->
            <header>
                <h1>ยินดีตอนรับคุณ, <%= owner.User_Name %></h1>
                <div class="header-right">
                    <button class="notification-btn" aria-label="Notifications">
                        <i class="fas fa-bell"></i>
                    </button>
                    <form action="/logout" method="post">
                        <button type="submit" class="logout-btn">ออกจากระบบ</button>
                    </form>
                </div>
            </header>

            <!-- Main Section -->
            <!-- Main Section -->
            <main>
                <section class="content-box">
                    <h2>ตรวบสอบหอพัก</h2>
                    
                    <div class="rating-section">
                        <div class="guest-reviews">
                            <h3>คะแนนรีวิว :</h3>
                            <div class="stars">
                                <% 
                                const numstar = avg_rate[0].Rating / 2;
                                const decimal = numstar % 1;
                                const hasHalfStar = decimal >= 0.4 && decimal < 0.7; // Check for half star
                                const fullStars = Math.floor(numstar) + (decimal >= 0.7 ? 1 : 0); // Number of full stars

                                for (let i = 0; i < fullStars; i++) { %>
                                    <i class="fas fa-star" style="color: #FE7A36;"></i>
                                <% } 
                            
                                if (hasHalfStar) { %>
                                    <i class="fas fa-star-half-stroke" style="color: #FE7A36;"></i>
                                <% } 
                            
                                // Add empty stars if needed (e.g., to always show 5 stars)
                                const emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0); 
                                for (let i = 0; i < emptyStars; i++) { %>
                                    <i class="far fa-star"></i> 
                                <% } %>
                            </div>
                        </div>
                        <div class="point-rating">
                            <h3>คะแนนเฉลี่ย :</h3>
                            <% if (avg_rate && avg_rate.length > 0 && avg_rate[0].Rating !== null) { %>
                                <div class="rating-value"> <%= avg_rate[0].Rating.toFixed(1) %></div>
                            <% } else { %>
                                <div class="rating-value"> ไม่มีคะแนน.</div>
                            <% } %>
                        </div>
                    </div>

                    <div class="reviews-section">
                        <h3>รีวิวจากผู้เช่า :</h3>
                        <div class="review-list">
                            <% reviews.forEach((review)=>{ %>
                                <div class="review-box">
                                    <div class="review-user">
                                        <%= review.User_Name %>:
                                    </div>
                                    <div class="review-content">
                                        "<%= review.Comment %>"
                                    </div>
                                    <div class="review-score">
                                        ให้คะแนน: <%= review.Rating %>.0
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>

                </section>
            </main>
        </div>
    </div>
</body>
</html>