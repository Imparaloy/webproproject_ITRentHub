<%- include("headernav.ejs") %>
    <!-- Main Content -->
    <div class="main-content">
        <!-- Header -->
        <%- include("headtoppart.ejs") %>
        <!-- Main Content -->
        <main>
            <!-- Card Section -->
            <section class="content-box">
                <h2 class="add-dorm">การเพิ่มหอพัก</h2>
                <h2 class="title">กรอกข้อมูลราคาต่าง ๆ</h2>

                <form class="forming" action="/insert_DormPrice" method="GET">
                    <label>1. ค่ามัดจำ :</label>
                    <input type="number" name="Advance_payment" autocomplete="off" placeholder="ใส่ตัวเลขไม่ทศนิยม">
                    <label>2. ค่าไฟ :</label>
                    <input type="number" name="Electric_price"  step="0.01" autocomplete="off" placeholder="ใส่ตัวเลขไม่ทศนิยม">
                    <label>3. ค่าน้ำ :</label>
                    <input type="number" name="Water_price" step="0.01" autocomplete="off" placeholder="ใส่ตัวเลขไม่ทศนิยม">
                    <label>4. ค่าบริการ :</label>
                    <input type="number" name="Service_price" step="0.01" autocomplete="off" placeholder="ใส่ตัวเลขไม่ทศนิยม">
                    <label>5. ค่าโทรศัพท์ :</label>
                    <input type="number" name="Phone_price" step="0.01" autocomplete="off" placeholder="ใส่ตัวเลขไม่ทศนิยม">
                    <label>6. ค่าอินเทอร์เน็ต :</label>
                    <input type="number" name="Internet_price" step="0.01" autocomplete="off" placeholder="ใส่ตัวเลขไม่ทศนิยม">
                    <button class="submit" type="submit" value="Submit" id="submit">ยืนยัน</button>
                </form>
            </section>
        </main>
    </div>
</div>
    <style> 
        .forming {
            display: flex;
            flex-direction: column;
            width: 80%;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            border-radius: 8px;

        }
        
        label {
            margin-top: 15px;
            font-weight: 500;
            color: black;
            font-size: 16px;
        }
        
        input {
            width: 100%;
            padding: 10px;
            margin: 8px 0;
            border-radius: 4px;
            font-size: 16px;
            border: 1px solid #ddd;
            box-sizing: border-box;
        }
        
        input:focus {
            outline: none;
            border-color: #4a90e2;
            box-shadow: 0 0 5px rgba(74, 144, 226, 0.3);
        }
        
        .submit {
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }
        
        .submit:hover {
            background-color: #45a049;
        }
        
        .title {
            text-align: center;
            margin-bottom: 25px;
            color: #333;
        }
    </style>
</body>
</html>