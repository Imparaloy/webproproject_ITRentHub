<%- include("headernav.ejs") %>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Header -->
        <%- include("headtoppart.ejs") %>
            <!-- Main Section -->
                        <main>
                            <section class="content-box">
                                <h2>เลือกดูหอพักที่เป็นเจ้าของ</h2>
                                <div class="dormitory-grid">
                                    <% dormitories.forEach(function(dormitory) { %>
                                        <a href="/dormitory/<%= dormitory.Rental_ID %>" class="dormitory-card">
                                            <div class="dormitory-title">
                                                <%= dormitory.Rental_Name %>
                                            </div>
                                        </a>
                                    <% }); %>
                                </div> 
                                <section class="add-dormitory">
                                    <p>หากต้องการเพิ่มหอพักเพิ่มเติม</p>
                                    <button class="add-btn" onclick="location.href='/add_dorm'">เพิ่มหอพัก</button>
                                </section>
                            </section>
                        </main>
            </div>
        </div>

<style>
    .add-dormitory {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 40px;
    }
    .dormitory-grid {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 16px;
    }

    .add-btn {
        border: 2px solid #1211CA;
        background: none;
        color: #1211CA;
        padding: 10px 20px;
        border-radius: 20px;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
    }

    .add-btn:hover {
        background-color: #1211CA;
        color: white;
    }
.dormitory-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 16px;
}

.dormitory-card {
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f0f0f0;
    padding: 20px;
    border-radius: 10px;
    text-align: center;
    text-decoration: none;
    color: black;
    font-weight: bold;
    transition: 0.3s;
}
</style>
