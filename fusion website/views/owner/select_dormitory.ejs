<%- include("headernav.ejs") %>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Header -->
        <%- include("headtoppart.ejs") %>
            <!-- Main Section -->

            <main>
                <!-- Card Section -->
                <div class="main-content">
                    <!-- Main Section -->
                    <main>
                        <section class="content-box">
                            <h2>เลือกหอพักที่เป็นเจ้าของ</h2>
                            <div class="dormitory-grid">
                                <% dormitories.forEach(function(dormitory) { %>
                                    <div class="dormitory-card">
                                        <div class="dormitory-title">
                                            <%= dormitory.name %>
                                        </div>
                                        <p>Owner ID: <%= dormitory.owner_id %>
                                        </p>
                                    </div>
                                    <% }); %>
                            </div>
                        </section>
                    </main>
                </div>
            </main>
    </div>
    <style>
        /* ปรับแต่ง Main */
main {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
}

/* กล่อง Content */
.content-box {
    background-color: #ffffff;
    border-radius: 20px;
    padding: 40px;
    min-width: 70%;
    max-width: 90%;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

/* ส่วนหัวของกล่อง */
.content-box h2 {
    font-size: 24px;
    margin-bottom: 20px;
    text-align: center;
    color: #333;
}

/* Grid Layout สำหรับ Dormitory */
.dormitory-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    justify-items: center;
    padding-top: 20px;
}

/* การ์ด Dormitory */
.dormitory-card {
    background: linear-gradient(135deg, #f9f9f9, #e3e3e3);
    border-radius: 15px;
    padding: 20px;
    text-align: center;
    width: 200px;
    transition: transform 0.2s, box-shadow 0.2s;
}

/* Hover Effect */
.dormitory-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 15px rgba(0, 0, 0, 0.15);
}

/* ชื่อ Dormitory */
.dormitory-title {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 10px;
    color: #2c3e50;
}

/* Owner ID */
.dormitory-card p {
    font-size: 14px;
    color: #555;
}

    </style>