<%- include("headernav.ejs") %>
    <!-- Main Content -->
    <div class="main-content">
        <!-- Header -->
        <%- include("headtoppart.ejs") %>
        <!-- Main Content -->
        <main>
            <!-- Card Section -->
            <section class="content-box">
                <h2 class="add-dorm">การเพิ่มหอพัก</h2>
                <h2 class="title">กรอกข้อมูลของห้องพัก</h2>
                <form class="forming" action="/insert_RoomData" method="GET">
                    <label>1. ชื่อห้องพักที่ให้เช่า :</label>
                    <input type="text" name="Room_Name" autocomplete="off" required placeholder="โปรดกรอกข้อมูล">
                    <label>2. ประเภทของห้องเช่า :</label>
                    <input type="text" name="Room_Type" autocomplete="off" required placeholder="โปรดกรอกข้อมูล">
                    <label>3. ขนาดของห้องเช่า :</label>
                    <input type="number" name="Size" step="0.01" autocomplete="off" required placeholder="ใส่ตัวเลข">
                    <label>4. ค่าเช่าห้องพักแบบรายเดือน :</label>
                    <input type="number" name="Monthly_Rental" autocomplete="off" required placeholder="ใส่ตัวเลขไม่ทศนิยม">
                    <!-- <label>5. Room Status :</label> -->
                    <input type="hidden" name="Room_Status" autocomplete="off" value="1">
                    <label>5. จำนวนห้องที่ว่างให้เช่า :</label>
                    <input type="number" name="Number_Available_Room" autocomplete="off" required placeholder="ใส่ตัวเลขไม่ทศนิยม">
                    <button class="submit" type="submit" value="Submit" id="submit">ยืนยัน</button>
                </form>
            </section>
        </main>
    </div>
</div>
    <style>
        input {
            margin-top: 10px;
            margin-bottom: 10px;
            width: 80%;
            font-size: 16px;
        }
        .forming {
            display: flex;
            flex-direction: column;
            width: 80%;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            border-radius: 8px;
        }

        label {
            margin-top: 15px;
            font-weight: 500;
            color: black;
            font-size: 16px;
        }

        input {
            width: 100%;
            padding: 10px;
            margin: 8px 0;
            border-radius: 4px;
            font-size: 16px;
            border: 1px solid #ddd;
            box-sizing: border-box;
        }

        input:focus {
            outline: none;
            border-color: #4a90e2;
            box-shadow: 0 0 5px rgba(74, 144, 226, 0.3);
        }

        .submit {
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

        .submit:hover {
            background-color: #45a049;
        }

        .title {
            text-align: center;
            margin-bottom: 25px;
            color: #333;
        }

        .add-dorm {
            text-align: center;
            color: #333;
            margin-top: 20px;
        }
    </style>
</body>
</html>